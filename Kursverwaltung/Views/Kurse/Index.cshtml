@model IEnumerable<Kursverwaltung.Models.Kurs>

@{
    ViewData["Title"] = "Kursverwaltung";
}

<h1 style="text-align: center;">Kurse</h1>

<table class="table table-borderless justify-content-start" style="text-align:left;">
    <tr>
        <td style="text-align: right;"><button class="btn btn-primary" asp-action="Create"><i class="bi bi-plus" style=" font-weight: bold; color: white; font-size: 1rem"></i><span style="margin-left: 5px;">Kurs anlegen</span></button></td>
        <td>   
            <form asp-action="Upload" enctype="multipart/form-data" >
                <span class="input-group">
                    
                        <input type="file" accept=".csv" name="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" >
                        <button class="btn btn-primary" type="submit" id="inputGroupFileAddon04"><i class="bi-upload" style="color: white;"></i></button>
                    
                </span>
            </form>
         </td>       
        <td><button class="btn btn-primary" asp-action="Download"><i class="bi-download" style="color: white; font-size: 1rem"></i> <i style="margin-left: 3px; font-size: 0.6rem;">.CSV</i></button></td>
    </tr>
</table>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dauer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tbody">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dauer)
            </td>
            <td>
                <button class="btn btn-primary" asp-action="Edit" asp-route-id="@item.KursID">Edit</button>
                <button class="btn btn-primary" asp-action="Details" asp-route-id="@item.KursID">Details</button>
                <button class="btn btn-primary" asp-action="Delete" asp-route-id="@item.KursID">Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>
